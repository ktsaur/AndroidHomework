<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidHomework" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="SandTheme.AndroidHomework" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="colorPrimary">@color/sand</item>
        <item name="buttonTint">@color/sand</item>
        <item name="android:statusBarColor">@color/sandDark</item>
    </style>

    <style name="GreenTheme.AndroidHomework" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="colorPrimary">@color/green</item>
        <item name="buttonTint">@color/green</item>
        <item name="android:statusBarColor">@color/greenDark</item>
    </style>

    <style name="BlueTheme.AndroidHomework" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="colorPrimary">@color/blue</item>
        <item name="buttonTint">@color/blue</item>
        <item name="android:statusBarColor">@color/blueDark</item>
    </style>

</resources>